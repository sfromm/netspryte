<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{{ title | default("Network Graphs") }}</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/netspryte.css" rel="stylesheet">
    <meta http-equiv="refresh" content="300"/>
    <style type="text/css">
      img {
          max-width: 100%;
          max-height: 100%;
      }
      body {
        padding-top: 50px;
      }
      .section {
        padding-top: 50px;
      }
      .scrollable-menu {
        height: auto;
        max-height: 600px;
        overflow-x: hidden;
      }
    </style>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/#"><img src="/images/nero-logo.png"></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="#graphs">Network Graphs</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9" id="graphs">
    {% for data in data_sets %}
        {% if not data['_do_graph'] %}
        {%   continue %}
        {% elif 'ifAdminStatus' in data and data['ifAdminStatus'] == 'yes' %}
        {%   continue %}
        {% elif 'cbQosPolicyDirection' in data and data['cbQosPolicyDirection'] == 'input' %}
        {%   continue %}
        {% endif %}
        <div class="section">
          <h2 class="page-header" id="{{ data['_id'] }}">{{ data['_description'] }}</h2>
          <p>
            {% for period in graph_periods %}
              {% for graph in data['_graphs'] %}
                {% if period in graph %}
                  <a href="{{ data['_id'] }}.html"><img src="{{ graph }}"/></a><br/>
                {% endif %}
              {% endfor %}
            {% endfor %}
          </p>
        </div>
    {% endfor %}
    </div>
    <div class="col-md-3 sidebar">
      <ul class="nav nav-sidebar">
          {% for data in data_sets %}
            {% if data['_do_graph'] %}
              <li><a href="#{{ data['_id'] }}">{{ data['_title'] }}</a></li>
            {% endif %}
          {% endfor %}
      </ul>
    </div>
  </body>
</html>
